{% extends 'base.html.twig' %}
{% block title %}commande{% endblock %}

{% block body %}
<h2>Mes commandes</h2>
<ul>
    {% for commande in commandes %}
        <li>
            Commande du {{ commande.dateCommande|date('d/m/Y H:i') }} -
            Total : {{ commande.getTotal() }} € -
            statu : {{ commande.getStatut().value }} 
        </li>
    {% else %}
        <li>Aucune commande pour l’instant.</li>
    {% endfor %}
</ul>
{% endblock %}
