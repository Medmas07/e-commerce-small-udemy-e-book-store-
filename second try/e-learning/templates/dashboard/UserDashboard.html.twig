            <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">D√©connexion</a></li>
        </ul>
    </div>
{% endblock %}

{% block body %}
    <style>
        /* Diagonal "UNVERIFIED" ribbon */
        .block-wrapper {
            position: relative;
            width: 100%;
            height: 100%;
            display: inline-block;
        }
        .block-wrapper.blocked::before {
            content: "UNVERIFIED";
            position: absolute;
            top: 20px;
            right: -50px;
            width: 220px;
            padding: 5px 0;
            background: rgba(220, 53, 69, 0.85); /* Bootstrap danger red with opacity */
            color: #fff;
            font-weight: 700;
            font-size: 0.85rem;
            text-align: center;
            transform: rotate(45deg);
            pointer-events: none;
            z-index: 10;
            box-shadow: 0 0 10px rgba(220, 53, 69, 0.7);
            user-select: none;
        }
        .block-wrapper.blocked {
            pointer-events: none;
            opacity: 0.65;
        }
        /* Allow interactions inside content even if blocked */
        .block-wrapper.blocked .block-content {
            pointer-events: auto;
        }
    </style>

    <div class="container mt-5">
        <h2 class="mb-4 fw-bold">Bienvenue, {{ app.user.firstname }} !</h2>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

            <div class="col">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title">üìö Voir les catalogues</h5>
                        <p class="card-text">Explorez les formations disponibles sur la plateforme.</p>
                        <a href="{{ path('dashboard_path') }}" class="btn btn-primary mt-auto">Consulter</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title">üë§ Mon compte</h5>
                        <p class="card-text">Voir ou modifier vos informations personnelles.</p>
                        <a href="{{ path('user_show_profile') }}" class="btn btn-primary mt-auto">Profil</a>
                    </div>
                </div>
            </div>

            {% if 'ROLE_VERIFIED' in app.user.roles %}
                <div class="col">
                    <div class="card h-100 shadow-sm text-center border-success">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h5 class="card-title">üìò Mes cours</h5>
                            <p class="card-text">Acc√©dez √† tous les cours disponibles pour vous.</p>
                            <a href="{{ path('dashboard_path') }}" class="btn btn-success mt-auto">Voir mes cours</a>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if 'ROLE_FORMATEUR' in app.user.roles %}
                <div class="col">
                    <div class="card h-100 shadow-sm text-center border-warning">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h5 class="card-title">üéì G√©rer mes formations</h5>
                            <p class="card-text">Ajoutez ou modifiez vos propres formations.</p>
                            <a href="{{ path('dashboard_path') }}" class="btn btn-warning mt-auto">Mes formations</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <div class="block-wrapper h-100">
                        <div class="card h-100 shadow-sm block-content text-center">
                            <div class="card-body d-flex flex-column justify-content-center">
                                <h5 class="card-title">üìù Devenir formateur</h5>
                                <p class="card-text">Soumettez une demande pour rejoindre l'√©quipe des formateurs.</p>
                                <a href="{{ path('user_demand') }}" class="btn btn-outline-secondary mt-auto">Faire une demande</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}
