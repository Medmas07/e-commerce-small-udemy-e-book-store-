{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center p-4">
                        <h2 class="mb-4">Password Reset Email Sent</h2>
                        <p class="lead">
                            If an account matching your email exists, an email has been sent containing a link to reset your password.
                        </p>
                        <p class="mb-4 text-muted">
                            This link will expire in <strong>1 hour</strong>.
                        </p>
                        <p>
                            If you don't receive an email, please check your spam folder or
                            <a href="{{ path('app_forgot_password_request') }}" class="btn btn-link p-0 align-baseline">
                                try again
                            </a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
